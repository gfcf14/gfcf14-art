@using Microsoft.AspNetCore.Components

<div class="cntr-error">
  <img class="img-error" src="/assets/images/error.webp" alt="error-image" />
  <p class="txt-error">Could not fetch data!</p>
  <button @onclick="Retry">TRY AGAIN</button>
</div>

@code {
  [Parameter]
  public EventCallback Retry { get; set; }
}
